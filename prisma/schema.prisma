generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("DEV")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  ownedProjects    Project[]          @relation("ProjectOwner")
  projectMembers   ProjectMember[]
  assignedTasks    Task[]             @relation("TaskAssignee")
  reportedTasks    Task[]             @relation("TaskReporter")
  grantedPerms     UserPermission[]   @relation("PermGrantedBy")
  permissions      UserPermission[]   @relation("PermOwner")
  reassignRequests ReassignRequest[]  @relation("ReassignRequester")
  reviewedRequests ReassignRequest[]  @relation("ReassignReviewer")
  notifications    Notification[]
  calendarEvents   CalendarEvent[]
  sentInvitations     ProjectInvitation[] @relation("InvitationSender")
  receivedInvitations ProjectInvitation[] @relation("InvitationReceiver")
  attachments      Attachment[]
  taskAssignments  TaskAssignee[]
  activities       TaskActivity[]
}

model UserPermission {
  id         String   @id @default(cuid())
  userId     String
  permission String
  grantedBy  String
  createdAt  DateTime @default(now())

  user    User @relation("PermOwner", fields: [userId], references: [id])
  granter User @relation("PermGrantedBy", fields: [grantedBy], references: [id])

  @@unique([userId, permission])
}

model Project {
  id          String   @id @default(cuid())
  key         String   @unique
  name        String
  description String   @default("")
  ownerId     String
  status      String   @default("Active")
  color       String   @default("#3B82F6")
  createdAt   DateTime @default(now())

  // Данные договора
  contractNumber    String?
  contractSignDate  String?
  contractEndDate   String?
  rate              Float?
  contractAmount    Float?
  externalLaborCost Float?
  internalLaborCost Float?

  owner       User                @relation("ProjectOwner", fields: [ownerId], references: [id])
  members     ProjectMember[]
  tasks       Task[]
  invitations ProjectInvitation[]
  attachments Attachment[]
}

model ProjectMember {
  id            String @id @default(cuid())
  projectId     String
  userId        String
  roleInProject String @default("DEV")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@unique([projectId, userId])
}

model Task {
  id          String   @id @default(cuid())
  projectId   String
  key         String
  title       String
  description String   @default("")
  status      String   @default("Backlog")
  priority    String   @default("P3")
  assigneeId  String?
  reporterId  String
  labels      String   @default("[]")
  dueDate        String?
  startDate      String?
  progress       Int      @default(0)
  estimatedHours Int      @default(0)
  actualHours    Float    @default(0)
  expectedHours  Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Тип задачи и иерархия
  taskType       String   @default("task")   // task | parent | stage | recurring
  parentId       String?
  assignmentDate String?

  // Для заглавных задач (taskType = "parent")
  initiatorName      String?
  initiatorEmail     String?
  initiatorPosition  String?
  curatorName        String?
  curatorEmail       String?
  curatorPosition    String?
  acceptanceStatus   String?
  customDates        String   @default("[]")

  // Для регулярных задач
  isRecurring        Boolean  @default(false)
  recurrencePattern  String?
  recurrenceDays     String?

  project          Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee         User?             @relation("TaskAssignee", fields: [assigneeId], references: [id])
  reporter         User              @relation("TaskReporter", fields: [reporterId], references: [id])
  reassignRequests ReassignRequest[]
  parent           Task?             @relation("TaskHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children         Task[]            @relation("TaskHierarchy")
  attachments      Attachment[]
  assignees        TaskAssignee[]
  activities       TaskActivity[]
}

model TaskAssignee {
  id     String @id @default(cuid())
  taskId String
  userId String

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id])

  @@unique([taskId, userId])
}

model Attachment {
  id           String   @id @default(cuid())
  fileName     String
  filePath     String
  fileSize     Int
  mimeType     String
  category     String   @default("general")
  projectId    String?
  taskId       String?
  uploadedById String
  createdAt    DateTime @default(now())

  activityId   String?
  calendarEventId String?

  project    Project?       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  task       Task?          @relation(fields: [taskId], references: [id], onDelete: Cascade)
  uploadedBy User           @relation(fields: [uploadedById], references: [id])
  activity   TaskActivity?  @relation("ActivityAttachments", fields: [activityId], references: [id], onDelete: Cascade)
  calendarEvent CalendarEvent? @relation(fields: [calendarEventId], references: [id], onDelete: Cascade)
}

model ReassignRequest {
  id            String    @id @default(cuid())
  taskId        String
  requestedById String
  newAssigneeId String
  status        String    @default("PENDING")
  reviewedById  String?
  comment       String?
  createdAt     DateTime  @default(now())
  reviewedAt    DateTime?

  task        Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  requestedBy User  @relation("ReassignRequester", fields: [requestedById], references: [id])
  reviewedBy  User? @relation("ReassignReviewer", fields: [reviewedById], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   @default("info")
  read      Boolean  @default(false)
  actionUrl String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model ProjectInvitation {
  id          String   @id @default(cuid())
  projectId   String
  invitedById String
  invitedId   String
  role        String   @default("DEV")
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())
  respondedAt DateTime?

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  invitedBy User    @relation("InvitationSender", fields: [invitedById], references: [id])
  invited   User    @relation("InvitationReceiver", fields: [invitedId], references: [id])

  @@unique([projectId, invitedId, status])
}

model TaskActivity {
  id        String   @id @default(cuid())
  taskId    String
  userId    String
  type      String   // "comment" | "status_change" | "field_change" | "reassign" | "time_entry" | "created"
  comment   String?
  field     String?  // "status", "priority", "assigneeId", ...
  oldValue  String?
  newValue  String?
  hours     Float?   // Только для time_entry
  workDate  String?  // Только для time_entry (YYYY-MM-DD)
  createdAt DateTime @default(now())

  task        Task         @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user        User         @relation(fields: [userId], references: [id])
  attachments Attachment[] @relation("ActivityAttachments")
}

model CalendarEvent {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String   @default("")
  startDate   String
  endDate     String
  startTime   String   @default("09:00")
  endTime     String   @default("10:00")
  color       String   @default("bg-sky-100 text-sky-700")
  type        String   @default("personal")
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())
  reminderTime   String?
  reminderSent   Boolean  @default(false)

  user User @relation(fields: [userId], references: [id])
  attachments Attachment[]
}
