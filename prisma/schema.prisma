generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("DEV")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  ownedProjects    Project[]          @relation("ProjectOwner")
  projectMembers   ProjectMember[]
  assignedTasks    Task[]             @relation("TaskAssignee")
  reportedTasks    Task[]             @relation("TaskReporter")
  grantedPerms     UserPermission[]   @relation("PermGrantedBy")
  permissions      UserPermission[]   @relation("PermOwner")
  reassignRequests ReassignRequest[]  @relation("ReassignRequester")
  reviewedRequests ReassignRequest[]  @relation("ReassignReviewer")
  notifications    Notification[]
  calendarEvents   CalendarEvent[]
}

model UserPermission {
  id         String   @id @default(cuid())
  userId     String
  permission String
  grantedBy  String
  createdAt  DateTime @default(now())

  user    User @relation("PermOwner", fields: [userId], references: [id])
  granter User @relation("PermGrantedBy", fields: [grantedBy], references: [id])

  @@unique([userId, permission])
}

model Project {
  id          String   @id @default(cuid())
  key         String   @unique
  name        String
  description String   @default("")
  ownerId     String
  status      String   @default("Active")
  color       String   @default("#3B82F6")
  createdAt   DateTime @default(now())

  owner   User            @relation("ProjectOwner", fields: [ownerId], references: [id])
  members ProjectMember[]
  tasks   Task[]
}

model ProjectMember {
  id            String @id @default(cuid())
  projectId     String
  userId        String
  roleInProject String @default("DEV")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@unique([projectId, userId])
}

model Task {
  id          String   @id @default(cuid())
  projectId   String
  key         String
  title       String
  description String   @default("")
  status      String   @default("Backlog")
  priority    String   @default("P3")
  assigneeId  String?
  reporterId  String
  labels      String   @default("[]")
  storyPoints Int      @default(0)
  dueDate        String?
  startDate      String?
  progress       Int      @default(0)
  estimatedHours Int      @default(0)
  actualHours    Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  project          Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee         User?             @relation("TaskAssignee", fields: [assigneeId], references: [id])
  reporter         User              @relation("TaskReporter", fields: [reporterId], references: [id])
  reassignRequests ReassignRequest[]
}

model ReassignRequest {
  id            String    @id @default(cuid())
  taskId        String
  requestedById String
  newAssigneeId String
  status        String    @default("PENDING")
  reviewedById  String?
  comment       String?
  createdAt     DateTime  @default(now())
  reviewedAt    DateTime?

  task        Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  requestedBy User  @relation("ReassignRequester", fields: [requestedById], references: [id])
  reviewedBy  User? @relation("ReassignReviewer", fields: [reviewedById], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   @default("info")
  read      Boolean  @default(false)
  actionUrl String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model CalendarEvent {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String   @default("")
  startDate   String
  endDate     String
  startTime   String   @default("09:00")
  endTime     String   @default("10:00")
  color       String   @default("bg-sky-100 text-sky-700")
  type        String   @default("personal")
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
